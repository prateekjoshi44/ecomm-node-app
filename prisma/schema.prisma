generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          String @id @default(uuid())
  name        String
  description String
  price       Float
}

model users {
  id         String    @default(uuid())
  name       String
  email      String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  clerkId    String    @id
}
