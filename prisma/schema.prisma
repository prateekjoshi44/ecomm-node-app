generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_DEV")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id         String    @id @default(nanoid())
  name       String
  email      String?
  created_at DateTime? @default(now())
  clerkId    String    @unique
  role       Role      @default(USER)
  orders     Order[]
  upload     Upload[]
  like       Like[]
}

model Product {
  id          String    @id @default(nanoid())
  name        String
  description String
  price       Float
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt

  orderItems OrderItem[]
  upload     Upload[]
  like       Like[]
}

model Order {
  id        String      @id @default(nanoid())
  total     Float
  createdAt DateTime    @default(now())
  status    OrderStatus @default(PENDING)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  items OrderItem[]
}

model OrderItem {
  id       String @id @default(nanoid())
  quantity Int
  price    Float

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model Like {
  id        String  @id @default(nanoid())
  product   Product @relation(fields: [productId], references: [id])
  productId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  @@unique([productId, userId])
}

model Upload {
  id  String @id @default(nanoid())
  url String

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  product   Product? @relation(fields: [productId], references: [id])
  productId String?

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}
